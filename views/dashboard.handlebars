<section>
    <h2>Post a Meme</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="img-url">Link</label>
            <input id="img-url" name="img-url" />
        </div>
        <p>Click on the "Choose File" button to upload your meme!</p>

        <form action="/action_page.php">
            <input type="file" id="myFile" name="filename">
        </form>


        <button type="submit" class="btn">Post</button>
    </form>

</section>

{{#if posts.length}}
<section>
    <h2> Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post }}
            <a href="/dashboard/api/{{post.id}}" class="waves-effect waves-light btn"><i
                    class="material-icons">edit</i></a>
            <a class="waves-effect waves-light btn"><i class="material-icons">keyboard_arrow_up</i></a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>