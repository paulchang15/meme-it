<div class="container">
    <div class="col l12 m8 s6 offset-s3 post-content"><span class="flow-text"></span>
        <div class="card col l8 m10 s12">
            <section>
                <h2>Post a Meme</h2>

                <form class="new-post-form">
                    <div>
                        <label for="post-title">Title</label>
                        <input placeholder="Meme Title" type="text" id="post-title" name="post-title" />
                    </div>

                    <div class="input-field">
                        <label for="url">URL</label>
                        <input placeholder="image URL" id="url" type="text" class="validate">
                    </div>

                    <button id="image-submit" type="submit" class="btn blue-theme">Post</button>
                </form>
            </section>

            {{#if posts.length}}
            <section>
                <h2> Your Memes</h2>
                <ol>
                    {{#each posts as |post|}}
                    <li>
                        {{> post-info post }}
                        <a href="/dashboard/edit/{{post.id}}" class="waves-effect blue-theme btn"><i
                                class="material-icons blue-theme edit-link">edit</i></a>
                    </li>
                    {{/each}}
                </ol>
            </section>
            {{/if}}

        </div>
    </div>
</div>
<script src="/javascript/add-post.js"></script>
{{#if loggedIn}}
<script src="/javascript/logout.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}