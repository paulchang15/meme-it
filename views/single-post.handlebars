<div class="container">
    <div class="col l12 m8 s6 offset-s3"><span class="flow-text"></span>
        <div class="card col s6">
            {{> post-info post }}
            {{#if loggedIn }}
            <form class="comment-form">
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea name="comment-body" class="comment_text_area materialize-textarea"></textarea>
                                <label for="textarea1">Comment</label>
                            </div>

                        </div>
                        <button class="btn waves-effect blue-theme" type="submit">add comment</button>
                    </form>
                </div>
            </form>
            {{/if}}
        </div>
        <div class="comment_section">

            {{> comments post.comments }}
        </div>
    </div>
    {{#if loggedIn }}
    <script src="/javascript/comment.js"></script>
    <script src="/javascript/upvote.js"></script>
    {{/if}}