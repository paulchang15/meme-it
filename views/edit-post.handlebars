<div class="container">
    <div class="col l12 m8 s6 offset-s3"><span class="flow-text"></span>
        <div class="card col s6">
            <article>
                <h2>
                    Edit Meme
                </h2>
                <form class="edit-post-form">
                    <div>
                        <input name="post-title" type="text" value="{{post.title}}" />
                        {{!-- We dont need format_url on this now right? Will this actually be post.content? --}}
                        <span>({{post.img_url}})</span>
                    </div>
                    <div>
                        {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on
                        {{format_date post.created_at}}
                        |
                        <a href="/api/posts/{{post.id}}">{{post.comments.length}}
                            {{format_plural "comment" post.comments.length}}</a>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit">Save post</button>
                    <button type="button" class="btn waves-effect waves-light delete-post-btn">Delete post</button>
                </form>
            </article>
            <form class="comment-form">
                <div>
                    <textarea name="comment-body"></textarea>
                </div>

                <div>
                    <button class="btn waves-effect waves-light" type="submit">add comment</button>
                </div>
            </form>


            {{> comments post.comments }}
        </div>
    </div>
</div>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>